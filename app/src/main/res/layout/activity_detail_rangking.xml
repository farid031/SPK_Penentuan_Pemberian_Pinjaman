<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id"
            android:visibility="gone"/> <!--untuk membuat textview tidak tampil-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rangking"
            android:textSize="12sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/no"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nama"
            android:textSize="12sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nama"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tempat_lahir"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tmpt_lahir"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tgl_lahir"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tgl_lahir"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alamat"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/alamat"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_hp"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/no_hp"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gaji"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gaji"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pengeluaran"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/peng"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bpkb"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bpkb"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bobot_gaji"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bobot_gaji"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bobot_pengeluaran"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bobot_peng"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bobot_bpkb"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bobot_bpkb"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bobot_total"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bobot_total"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/detail_perhitungan"
                android:padding="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/detail_perhitungan_bobot"
                    android:textSize="18sp"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/nilai_bobot_kriteria"
                    android:textSize="16sp"/>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="12sp"
                            android:text="@string/bobot_faktor_gaji"
                            android:layout_marginRight="10dp"
                            android:layout_marginEnd="10dp" />
                        <TextView
                            android:textSize="12sp"
                            android:id="@+id/nilai_bobot_gaji"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:textSize="12sp"
                            android:text="@string/bobot_faktor_pengeluaran"
                            android:layout_marginRight="10dp"
                            android:layout_marginEnd="10dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:id="@+id/nilai_bobot_peng"/>
                    </TableRow>
                    <TableRow
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:textSize="12sp"
                            android:text="@string/bobot_faktor_bpkp"
                            android:layout_marginRight="10dp"
                            android:layout_marginEnd="10dp" />
                        <TextView
                            android:textSize="12sp"
                            android:id="@+id/nilai_bobot_bpkb"/>
                    </TableRow>

                    <TextView
                        android:textSize="16sp"
                        android:text="@string/nilai_kriteria_gaji"/>

                    <TableRow>
                        <TextView
                            android:text="@string/rp0_rp1_000_000"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/gaji_empat"
                            android:textSize="12sp"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:text="@string/rp1_000_001_rp2_000_000"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/gaji_lima"
                            android:textSize="12sp"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:text="@string/rp2_000_001_rp3_000_000"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/gaji_enam"
                            android:textSize="12sp"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:text="@string/rp3_000_001_rp4_000_000"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/gaji_tujuh"
                            android:textSize="12sp"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:text="@string/rp4_000_001_rp5_000_000"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/gaji_delapan"
                            android:textSize="12sp"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:text="@string/rp5_000_001_rp10_000_000"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/gaji_sembilan"
                            android:textSize="12sp"/>
                    </TableRow>
                    <TableRow
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:text="@string/rp10_000_001"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/gaji_sepuluh"
                            android:textSize="12sp"/>
                    </TableRow>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textSize="16sp"
                        android:text="@string/nilai_kriteria_penghasilan"/>

                    <TableRow>
                        <TextView
                            android:text="@string/rp0_rp1_000_000"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/peng_sepuluh"
                            android:textSize="12sp"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:text="@string/rp1_000_001_rp2_000_000"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/peng_sembilan"
                            android:textSize="12sp"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:text="@string/rp2_000_001_rp3_000_000"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/peng_delapan"
                            android:textSize="12sp"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:text="@string/rp3_000_001_rp4_000_000"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/peng_tujuh"
                            android:textSize="12sp"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:text="@string/rp4_000_001_rp5_000_000"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/peng_enam"
                            android:textSize="12sp"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:text="@string/rp5_000_001_rp10_000_000"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/peng_lima"
                            android:textSize="12sp"/>
                    </TableRow>
                    <TableRow
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:text="@string/rp10_000_001"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/peng_empat"
                            android:textSize="12sp"/>
                    </TableRow>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textSize="16sp"
                        android:text="@string/nilai_kriteria_tahun_bpkb"/>

                    <TableRow>
                        <TextView
                            android:text="@string/_2007"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/bpkb_nol"
                            android:textSize="12sp"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:text="@string/_2008_2013"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/bpkb_lima"
                            android:textSize="12sp"/>
                    </TableRow>
                    <TableRow
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:text="@string/_2014_2018"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/bpkb_sepuluh"
                            android:textSize="12sp"/>
                    </TableRow>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textSize="16sp"
                        android:text="@string/pembobotan_kriteria"/>

                    <TableRow>
                        <TextView
                            android:text="@string/gaji"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/nilai_gaji"
                            android:textSize="12sp"/>
                        <TextView
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            android:text="@string/nilai_bobot"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/pembobotan_gaji"
                            android:textSize="12sp"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:text="@string/pengeluaran"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/nilai_peng"
                            android:textSize="12sp"/>
                        <TextView
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            android:text="@string/nilai_bobot"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/pembobotan_peng"
                            android:textSize="12sp"/>
                    </TableRow>
                    <TableRow
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:text="@string/bpkb"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/nilai_bpkb"
                            android:textSize="12sp"/>
                        <TextView
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            android:text="@string/nilai_bobot"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/pembobotan_bpkb"
                            android:textSize="12sp"/>
                    </TableRow>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textSize="16sp"
                        android:text="@string/nilai_total_bobot"/>

                    <TableRow>
                        <TextView
                            android:text="@string/total_bobot"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/total_bobot"
                            android:textSize="12sp"/>
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
</ScrollView>